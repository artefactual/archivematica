        "@model",
        "execute",
        "arguments",
        "filter_file_start",
        "filter_file_end",
        "filter_subdir",
        "stdout_file",
        "stderr_file"
      ],
      "type": "object"
    },
    "translations": {
      "additionalProperties": false,
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z]{2,3}([-_/][a-zA-Z]{2,3})?$": {
          "type": "string"
        }
      },
      "required": [
        "en"
      ],
      "type": "object"
    },
    "uuid": {
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
      "type": "string"
    },
    "watched_dir": {
      "additionalProperties": false,
      "properties": {
        "chain_id": {
          "$ref": "#/definitions/uuid"
        },
        "only_dirs": {
          "type": "boolean"
        },
        "path": {
          "type": "string"
        },
        "unit_type": {
          "enum": [
            "Transfer",
            "DIP",
            "SIP"
          ],
          "type": "string"
        }
      },
      "required": [
        "chain_id",
        "only_dirs",
        "path",
        "unit_type"
      ],
      "type": "object"
    }
  },
  "description": "In-progress JSON Schema document for Archivematica JSON-encoded workflows.",
  "properties": {
    "chains": {
      "additionalProperties": {
        "$ref": "#/definitions/chain"
      },
      "type": "object"
    },
    "links": {
      "additionalProperties": {
        "$ref": "#/definitions/link"
      },
      "type": "object"
    },
    "watched_directories": {
      "items": {
        "$ref": "#/definitions/watched_dir"
      },
      "type": "array"
    }
  },
  "required": [
    "chains",
    "links",
    "watched_directories"
  ],
  "title": "Archivematica Workflow JSON Schema",
  "type": "object"
}

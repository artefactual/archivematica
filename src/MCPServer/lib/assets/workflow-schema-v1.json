        "stderr_file": {
          "type": [
            "string",
            "null"
          ]
        },
        "stdout_file": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "@manager",
        "@model",
        "execute",
        "arguments",
        "filter_file_start",
        "filter_file_end",
        "filter_subdir",
        "stdout_file",
        "stderr_file"
      ],
      "type": "object"
    },
    "link_model_GetUnitVar": {
      "additionalProperties": false,
      "properties": {
        "@manager": {
          "pattern": "linkTaskManagerUnitVariableLinkPull",
          "type": "string"
        },
        "@model": {
          "pattern": "TaskConfigUnitVariableLinkPull",
          "type": "string"
        },
        "chain_id": {
          "oneOf": [
            {
              "$ref": "#/definitions/uuid"
            },
            {
              "type": "null"
            }
          ]
        },
        "variable": {
          "type": "string"
        }
      },
      "required": [
        "@manager",
        "@model",
        "chain_id",
        "variable"
      ],
      "type": "object"
    },
    "link_model_ReplacementDic": {
      "additionalProperties": false,
      "properties": {
        "@manager": {
          "pattern": "linkTaskManagerReplacementDicFromChoice",
          "type": "string"
        },
        "@model": {
          "pattern": "MicroServiceChoiceReplacementDic",
          "type": "string"
        },
        "replacements": {
          "items": [
            {
              "additionalProperties": false,
              "properties": {
                "description": {
                  "$ref": "#/definitions/translations"
                },
                "id": {
                  "$ref": "#/definitions/uuid"
                },
                "items": {
                  "additionalProperties": {
                    "type": "string"
                  },
                  "type": "object"
                }
              },
              "required": [
                "id",
                "description",
                "items"
              ],
              "type": "object"
            }
          ],
          "minItems": 0,
          "type": "array"
        }
      },
      "required": [
        "@manager",
        "@model",
        "replacements"
      ],
      "type": "object"
    },
    "link_model_SetUnitVar": {
      "additionalProperties": false,
      "properties": {
        "@manager": {
          "pattern": "linkTaskManagerSetUnitVariable",
          "type": "string"
        },
        "@model": {
          "pattern": "TaskConfigSetUnitVariable",
          "type": "string"
        },
        "chain_id": {
          "oneOf": [
            {
              "$ref": "#/definitions/uuid"
            },
            {
              "type": "null"
            }
          ]
        },
        "variable": {
          "type": "string"
        },
        "variable_value": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "@manager",
        "@model",
        "chain_id",
        "variable",
        "variable_value"
      ],
      "type": "object"
    },
    "link_model_StandardTaskDir": {
      "additionalProperties": false,
      "properties": {
        "@manager": {
          "pattern": "linkTaskManagerDirectories",
          "type": "string"

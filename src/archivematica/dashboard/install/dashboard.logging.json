{
  "disable_existing_loggers": false,
  "filters": {
    "require_debug_false": {
      "()": "django.utils.log.RequireDebugFalse"
    }
  },
  "formatters": {
    "detailed": {
      "datefmt": "%Y-%m-%d %H:%M:%S",
      "format": "%(levelname)-8s  %(asctime)s  %(name)s:%(module)s:%(funcName)s:%(lineno)d:  %(message)s"
    },
    "simple": {
      "format": "%(levelname)-8s  %(name)s.%(funcName)s:  %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "level": "DEBUG"
    },
    "logfile": {
      "backupCount": 5,
      "class": "custom_handlers.GroupWriteRotatingFileHandler",
      "filename": "/var/log/archivematica/dashboard/dashboard.log",
      "formatter": "detailed",
      "level": "INFO",
      "maxBytes": 20971520
    },
    "mail_admins": {
      "class": "django.utils.log.AdminEmailHandler",
      "filters": [
        "require_debug_false"
      ],
      "level": "ERROR"
    },
    "null": {
      "class": "logging.NullHandler",
      "level": "DEBUG"
    },
    "verboselogfile": {
      "backupCount": 5,
      "class": "custom_handlers.GroupWriteRotatingFileHandler",
      "filename": "/var/log/archivematica/dashboard/dashboard.debug.log",
      "formatter": "detailed",
      "level": "DEBUG",
      "maxBytes": 104857600
    }
  },
  "loggers": {
    "agentarchives": {
      "level": "INFO"
    },
    "archivematica": {
      "level": "DEBUG"
    },
    "archivematica.mcp": {
      "propagate": false
    },
    "django.request": {
      "handlers": [
        "mail_admins"
      ],
      "level": "ERROR",
      "propagate": true
    },
    "elasticsearch": {
      "level": "INFO"
    }
  },
  "root": {
    "handlers": [
      "logfile",
      "verboselogfile"
    ],
    "level": "WARNING"
  },
  "version": 1
}
